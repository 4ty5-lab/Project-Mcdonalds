{
  "manifest_version": 3,
  "name": "Project Mcdonalds",
  "version": "1.0",
  "permissions": ["tabs", "storage", "system.memory", "fileSystemProvider"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "bookmark-tab": {
      "suggested_key": {
        "default": "Alt+Shift+F4"
      },
      "description": "Bookmark current tab"
    },
    "unbookmark-tab": {
      "suggested_key": {
        "default": "Alt+Shift+F5"
      },
      "description": "Unbookmark current tab"
    },
    "open-favorite": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "Open favorite tab"
    },
    "open-menu": {
      "suggested_key": {
        "default": "Alt+Shift+2"
      },
      "description": "Open main menu"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
